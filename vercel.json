{
  "version": 2,
  "name": "pamasiga-os",
  "description": "AI-Augmented Software Development Platform",

  "buildCommand": "cd website && pnpm build",
  "outputDirectory": "website/out",
  "installCommand": "pnpm install",

  "framework": "nextjs",

  "regions": ["iad1", "sfo1"],

  "cleanUrls": true,
  "trailingSlash": false,

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],

  "redirects": [
    {
      "source": "/docs",
      "destination": "/getting-started/installation",
      "permanent": false
    }
  ],

  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],

  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },

  "env": {
    "NEXT_PUBLIC_SITE_URL": "https://yourdomain.com"
  },

  "build": {
    "env": {
      "NODE_VERSION": "20"
    }
  },

  "git": {
    "deploymentEnabled": {
      "main": true,
      "preview": true
    }
  },

  "github": {
    "autoAlias": true,
    "silent": false,
    "autoJobCancelation": true
  }
}
